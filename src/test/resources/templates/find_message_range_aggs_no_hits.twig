{
    "query":{
{% if (length(message)==0) %}
        "match_all": {}
{% else %}
        "match":{
            "message": {
                "query": "{{ message }}",
                "operator": "{{ default(operator, 'or') }}"
            }
        }
{% endif %}
    },
    "aggs": {
        "byHistogram": {
            "histogram": {
                "field": "year",
                "interval": 10
            }
        }
    },
    "size": 0
}
